@page
@model HelloWorldModel
@{
    ViewData["Title"] = "Hello World Page";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <h1>Hello World Haza!!</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Song Name</th>
            </tr>
            </thead>
            <tbody>
            @{ var i = 1;}
            @foreach (var song in Model.SongNames) {
                <tr>
                    <th scope="row">@i</th>
                    <td>@song</td>
                </tr>
                i++;
            }
            </tbody>
        </table>
    </div>
    <div class="col-lg-3"></div>
</div>